<div class="page-header">
  <h1>Photo #<%= @photo.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Image url</dt>
  <dd><img src="<%= @photo.image_url %>" width="240"></dd>

  <dt>Caption</dt>
  <dd><%= @photo.caption %></dd>

  <dt>User</dt>
  <dd><%= @photo.user.email %></dd>

</dl>

<ul class="media-list">
  <% @photo.comments.each do |comment| %>
    <li class="media">
      <a class="pull-left" href="#">
        <img class="media-object" src="<%= comment.user.avatar_url%>" alt="...">
      </a>
      <div class="media-body">
        <h4 class="media-heading"><%= comment.user.email%></h4>
        <%= comment.content %>
      </div>
    </li>
  <% end %>
</ul>

<form action="/create_comment" class="form-horizontal">
  <!-- Label and input for content -->
  <div class="form-group">
    <label for="content" class="col-sm-2 control-label">
      Comment
    </label>
    <div class="col-sm-10">
      <textarea id="content" name="content" class="form-control" rows="3"></textarea>
    </div>
  </div>

  <!-- Label and input for photo_id -->
  <div class="form-group">
    <div class="col-sm-10">
      <input type="hidden" id="photo_id" name="photo_id" placeholder="photo_id" class="form-control" value="<%= @photo.id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Comment" class="btn btn-primary">
    </div>
  </div>
</form>

  <!-- Label and input for favorite -->
<form action="/create_favorite" class="form-horizontal">
  <div class="form-group">
    <div class="col-sm-10">
      <input type="hidden" id="photo_id" name="photo_id" placeholder="Picture" class="form-control" value="<%= @photo.id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Favorite" class="btn btn-primary">
    </div>
  </div>
</form>
